<% include ../parts/header %>
<section class="container py-4">
	<h1 class="text-center">Add new campground</h1>
	<div class="row">
		<div class="col-lg-8 offset-lg-2">
			<form action="/camps" method="POST">
				<div class="form-row">
					<div class="form-group col">
						<label for="title">Campground name: </label>
						<input class="form-control" type="text" id="title" name="camp[name]">
					</div>

					<div class="form-group col-4">
						<label for="image">$ Cost/night: </label>
						<input class="form-control" type="number" id="price" name="camp[cost]" step="0.01" min="0" value="50" required>
					</div>
				</div>

				<div class="form-group">
					<label for="location">Location: </label>
					<input class="form-control" type="text" id="location" name="location" placeholder="Depotchem Amgal Ltd, Tnuva Street, Be'er Tuvia">
				</div>

				<div class="form-group">
					<label for="image">Image URL: </label>
					<input class="form-control" type="text" id="image" name="camp[image]">
				</div>

				<div class="form-group">
					<label for="info">Description: </label>
					<textarea class="form-control" id="info" name="camp[info]" rows="10"></textarea>
				</div>

				<button class="btn btn-primary" type="submit">Submit</button>
				<a class="btn btn-outline-secondary"href="/camps">Go back</a>
			</form>
		</div>
	</div> <!-- row -->
</section>
<% include ../parts/footer %>